#! /bin/bash

IMAGE_NAME=vslala/counter_clinic_registry
IMAGE_TAG=frontend
CONTAINER_NAME=counter-clinic-frontend

IMAGES=`sudo docker images | grep "$IMAGE_NAME"`

echo "IMAGE NAME: $IMAGE_NAME"
echo "IMAGE TAG: $IMAGE_TAG"
echo "LIST IMAGES: $IMAGES"


delete_image() {
 echo "Deleting Image ${IMAGE_NAME}:${IMAGE_TAG}"
 sudo docker container stop "$CONTAINER_NAME"
 sudo docker rm container "$CONTAINER_NAME"
 sudo docker rmi "${IMAGE_NAME}:${IMAGE_TAG}"
}

build() {
 echo "Pulling latest changes from origin/master..."
 sudo git pull origin master

 echo "Packaging the app"
 sudo npm run build
 sudo docker build --no-cache --tag "${IMAGE_NAME}:${IMAGE_TAG}" .
}

run_container() {
 sudo docker run -it -d -p5000:80 --name "${CONTAINER_NAME}" "${IMAGE_NAME}:${IMAGE_TAG}"
}

if [ -z "$IMAGES" ]
then
echo "Image Not Found"
build
run_container
else
echo "Image Found"
delete_image
build
run_container
fi